{
  "name": "autodroid-watcher-server",
  "author": "luizfelipelaviola",
  "version": "0.0.1",
  "main": "./src/index.js",
  "license": "MIT",
  "engines": {
    "node": "v22.14.0"
  },
  "scripts": {
    "dev": "tsx ./src/index.ts",
    "dev:watch": "tsx ./src/index.ts",
    "dev:debug": "tsx --inspect-brk ./src/index.ts",
